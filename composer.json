{
  "name": "alleyinteractive/mantle-browser-testing",
  "description": "Mantle Browser Testing",
  "license": "GPL-2.0-or-later",
  "authors": [],
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "ext-zip": "*",
    "alleyinteractive/mantle-framework": "^1.0",
    "php-webdriver/webdriver": "^1.9.0",
    "symfony/process": "^5.0"
  },
  "require-dev": {
    "alleyinteractive/alley-coding-standards": "^2.0",
    "mockery/mockery": "^1.0",
    "nunomaduro/collision": "^7.0",
    "phpunit/phpunit": "^9.3.3"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "alleyinteractive/composer-wordpress-autoloader": true
    },
    "sort-packages": true
  },
  "extra": {
    "mantle": {
      "aliases": [],
      "providers": [
        "Mantle\\Browser_Testing\\Browser_Testing_Service_Provider"
      ]
    },
    "wordpress-autoloader": {
      "autoload": {
        "Mantle\\Browser_Testing\\": "src/"
      },
      "autoload-dev": {
        "Mantle\\Browser_Testing\\Tests\\": "tests/"
      }
    }
  },
  "scripts": {
    "lint": "@phpcs",
    "phpcbf": "phpcbf --standard=./phpcs.xml .",
    "phpcs": "phpcs --standard=./phpcs.xml .",
    "phpunit": "phpunit",
    "test": [
      "@phpcs",
      "@phpunit"
    ]
  }
}
